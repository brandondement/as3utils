package bdement.loading.events
{

	import flash.events.ErrorEvent;
	import flash.events.Event;

	public final class LoadErrorEvent extends ErrorEvent
	{

		////////////////////////////////////////////////////////////
		//   CONSTANTS 
		////////////////////////////////////////////////////////////

		public static const ERROR:String = "error";

		////////////////////////////////////////////////////////////
		//   CONSTRUCTOR 
		////////////////////////////////////////////////////////////

		public function LoadErrorEvent(text:String = "")
		{
			super(ERROR, false, false, text);
		}

		////////////////////////////////////////////////////////////
		//   PUBLIC API 
		////////////////////////////////////////////////////////////

		public override function clone():Event
		{
			return new LoadErrorEvent(text);
		}
	}
}